<form action="/contact" id="contact-form" method="post" role="form">
    <fieldset>
      <label for="name">Name &#42;</label>
      <input id="name" name="fullname" type="text" placeholder="Your name" required="required"><br>
      <label for="email">Email &#42;</label>
      <input id="email" name="email" type="text" placeholder="Your email" required="required"><br>
      <label for="message">Message &#42;</label>
      <textarea id="message" name="message" placeholder="Enter your message here" rows="3" required="required"></textarea><br>
      <button type="submit">Submit</button>
    </fieldset>
  </form>